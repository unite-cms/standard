{
    "name": "unite-cms/standard",
    "description": "Standard installation of united CMS",
    "type": "project",
    "authors": [
        {
            "name": "Franz Wilding",
            "email": "franz@unite.co.at"
        },
        {
            "name": "Stefan Kamsker",
            "email": "stefan@unite.co.at"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require": {
        "unite-cms/core-bundle": "0@dev",
        "unite-cms/collection-field-bundle": "0@dev",
        "unite-cms/storage-bundle": "0@dev",
        "unite-cms/wysiwyg-field-bundle": "0@dev"
    },
    "require-dev": {
        "sroze/companienv": "~0",
        "symfony/thanks": "^1.0"
    },
    "scripts": {
        "post-install-cmd": [
            "Companienv\\Composer\\ScriptHandler::run",
            "bin/console assets:install --symlink"
        ],
        "post-update-cmd": [
            "Companienv\\Composer\\ScriptHandler::run",
            "bin/console assets:install --symlink"
        ]
    }
}
